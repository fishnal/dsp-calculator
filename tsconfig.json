{
	"include": [
		"src/**/*",
		"test/**/*",
		"scripts/**/*"
	],
	"exclude": [
		"dist/",
		"coverage/",
		"node_modules/"
	],
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "dist/",
		"listFiles": true,
		"listEmittedFiles": true,
		"declaration": true,
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node",
			"jest"
		]
	}
}
